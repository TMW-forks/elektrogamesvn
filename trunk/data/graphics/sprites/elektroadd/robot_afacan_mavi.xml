<?xml version="1.0"?>
<sprite>

	<imageset name="base" src="graphics/sprites/robot_afacan_mavi.png" width="52" height="63" />

	<action name="stand" imageset="base">
		<animation direction="down">
		  <frame index="0" />
		</animation>
		<animation direction="left">
		  <frame index="7" />
		</animation>
		<animation direction="up">
		  <frame index="14" />
		</animation>
		<animation direction="right">
		  <frame index="21" />
		</animation>
	</action>

	<action name="walk" imageset="base">
		<animation direction="down">
		  <frame index="1" />
		</animation>
		<animation direction="left">
		  <frame index="8" />
		</animation>
		<animation direction="up">
		  <frame index="15" />
		</animation>
		<animation direction="right">
		  <frame index="22" />
		</animation>
	</action>

	<action name="dead" imageset="base">
		<animation direction="down">
		  <frame index="6" />
		</animation>
		<animation direction="left">
		  <frame index="13" />
		</animation>
		<animation direction="up">
		  <frame index="20" />
		</animation>
		<animation direction="right">
		  <frame index="27" />
		</animation>
	</action>

	<action name="attack" imageset="base">
		<animation direction="down">
			<sequence start="2" end="5" delay="50" />
		  	<end />
		</animation>
		<animation direction="left">
			<sequence start="9" end="12" delay="50" />
		  	<end />
		</animation>
		<animation direction="up">
			<sequence start="16" end="19" delay="50" />
		  	<end />
		</animation>
		<animation direction="right">
			<sequence start="23" end="26" delay="50" />
		  	<end />
		</animation>
	</action>

</sprite>
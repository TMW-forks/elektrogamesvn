<?xml version="1.0"?>
<sprite>

	<imageset name="base" src="graphics/sprites/robot_zuzu.png" width="60" height="72" />

	<action name="stand" imageset="base">
		<animation direction="down">
		  <frame index="0" />
		</animation>
		<animation direction="left">
		  <frame index="5" />
		</animation>
		<animation direction="up">
		  <frame index="10" />
		</animation>
		<animation direction="right">
		  <frame index="15" />
		</animation>
	</action>

	<action name="walk" imageset="base">
		<animation direction="down">
		<frame index="1" />
		</animation>
		<animation direction="left">
		  <frame index="6" />
		</animation>
		<animation direction="up">
		  <frame index="11" />
		</animation>
		<animation direction="right">
		  <frame index="16" />
		</animation>
	</action>

	<action name="dead" imageset="base">
		<animation direction="down">
		  <frame index="4" />
		</animation>
		<animation direction="left">
		  <frame index="9" />
		</animation>
		<animation direction="up">
		  <frame index="14" />
		</animation>
		<animation direction="right">
		  <frame index="19" />
		</animation>
	</action>

	<action name="attack" imageset="base">
		<animation direction="down">
			<sequence start="2" end="3" delay="75" />
		  	<end />
		</animation>
		<animation direction="left">
			<sequence start="7" end="8" delay="75" />
		  	<end />
		</animation>
		<animation direction="up">
			<sequence start="12" end="13" delay="75" />
		  	<end />
		</animation>
		<animation direction="right">
			<sequence start="17" end="18" delay="75" />
		  	<end />
		</animation>
	</action>

</sprite>
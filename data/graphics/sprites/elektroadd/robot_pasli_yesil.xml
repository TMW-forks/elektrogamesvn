<?xml version="1.0"?>
<sprite>

	<imageset name="base" src="graphics/sprites/elektroadd/robot_pasli_yesil.png" width="56" height="100" />

	<action name="stand" imageset="base">
		<animation direction="down">
		  <frame index="0" />
		</animation>
		<animation direction="left">
		  <frame index="11" />
		</animation>
		<animation direction="up">
		  <frame index="22" />
		</animation>
		<animation direction="right">
		  <frame index="33" />
		</animation>
	</action>

	<action name="walk" imageset="base">
		<animation direction="down">
		  <frame index="1" />
		</animation>
		<animation direction="left">
		  <frame index="12" />
		</animation>
		<animation direction="up">
		  <frame index="23" />
		</animation>
		<animation direction="right">
		  <frame index="34" />
		</animation>
	</action>

	<action name="dead" imageset="base">
		<animation direction="down">
		  <frame index="10" />
		</animation>
		<animation direction="left">
		  <frame index="21" />
		</animation>
		<animation direction="up">
		  <frame index="32" />
		</animation>
		<animation direction="right">
		  <frame index="43" />
		</animation>
	</action>

	<action name="attack" imageset="base">
		<animation direction="down">
			<sequence start="3" end="9" delay="50" />
		  	<end />
		</animation>
		<animation direction="left">
			<sequence start="14" end="20" delay="50" />
		  	<end />
		</animation>
		<animation direction="up">
			<sequence start="25" end="31" delay="50" />
		  	<end />
		</animation>
		<animation direction="right">
			<sequence start="36" end="42" delay="50" />
		  	<end />
		</animation>
	</action>

</sprite>